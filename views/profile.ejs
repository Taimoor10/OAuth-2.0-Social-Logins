<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Logins</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span> </span> Social Logins</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
        <div>
            <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
            <% if (user.facebook.token) { %>
                <p>
                    <strong>id</strong>: <%= user.facebook.id %> <br>
                    <strong>token</strong>: <%= user.facebook.token %> <br>
                    <strong>email</strong>: <%= user.facebook.email %> <br>
                    <strong>name</strong>: <%= user.facebook.name %> <br>
                </p>
                <a href="/auth/facebook/unlink" class="btn btn-primary">Unlink </a>
            <% } else { %>
                <a href="/auth/facebook/connect" class="btn btn-primary">Link Facebook</a>
            <% } %>
    
            <h3 class="text-primary"><span class="fa fa-github"></span> Github</h3>
            <% if (user.github.token) { %>
                <p>
                    <strong>id</strong>: <%= user.github.id %><br>
                    <strong>token</strong>: <%= user.github.token %><br>
                    <strong>email</strong>: <%= user.github.email %><br>
                    <strong>name</strong>: <%= user.github.name %><br>
                </p>
                <a href="/auth/github/unlink" class="btn btn-primary">Unlink</a>
            <% } else { %>
                <a href="/auth/github/connect" class="btn btn-primary">Link Github</a>
            <% } %>

            <h3 class="text-primary"><span class="fa fa-google"></span> Google</h3>
            <% if (user.google.token) { %>
                <p>
                    <strong>id</strong>: <%= user.google.id %><br>
                    <strong>token</strong>: <%= user.google.token %><br>
                    <strong>email</strong>: <%= user.google.email %><br>
                    <strong>name</strong>: <%= user.google.name %><br>
                </p>
                <a href="/auth/google/unlink" class="btn btn-primary">Unlink</a>
            <% } else { %>
                <a href="/auth/google/connect" class="btn btn-primary">Link Google</a>
            <% } %>
    </div>
</div>
</body>
</html>